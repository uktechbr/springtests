<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <logger name="br.com.uktech.multitenantschema" level="TRACE"></logger>
    <logger name="org.hibernate" level="DEBUG"></logger>
    
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
